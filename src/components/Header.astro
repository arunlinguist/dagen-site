<nav class='sticky top-0 z-50 glass'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='flex items-center justify-between h-16'>
      <div class='shrink-0'>
        <a href='/' class='text-2xl text-slate-700 font-semibold cursive'
          >Arun R</a
        >
      </div>

      <!-- Desktop nav -->
      <div class='hidden md:flex md:items-center md:space-x-2 font-semibold'>
        <a
          href='/about'
          class='group py-1 px-2 transition-colors duration-300 hover:bg-sky-600 hover:text-white rounded text-slate-700 group-hover:text-white'
          >About</a
        >
        <a
          href='/services'
          class='group py-1 px-2 transition-colors duration-300 hover:bg-sky-600 rounded hover:text-white text-slate-700 group-hover:text-white'
          >Services</a
        >
        <a
          href='/contact'
          class='group py-1 px-2 transition-colors duration-300 hover:bg-sky-600 rounded hover:text-white text-slate-700 group-hover:text-white'
          >Contact</a
        >
      </div>

      <!-- Mobile menu button -->
      <div class='md:hidden'>
        <button
          id='nav-toggle'
          aria-expanded='false'
          aria-controls='mobile-menu'
          class='inline-flex items-center justify-center p-2 rounded-md text-gray-800 hover:bg-sky-600 focus:outline-none'
          aria-label='Toggle menu'
        >
          <svg
            id='icon-open'
            class='block h-6 w-6'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
            xmlns='http://www.w3.org/2000/svg'
            ><path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M4 6h16M4 12h16M4 18h16'></path></svg
          >
          <!-- close icon -->
          <svg
            id='icon-close'
            class='hidden h-6 w-6'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
            xmlns='http://www.w3.org/2000/svg'
            ><path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M6 18L18 6M6 6l12 12'></path></svg
          >
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu, animated grow/shrink with JS -->
  <div
    id='mobile-menu'
    class='md:hidden max-h-0 overflow-hidden px-2 transition-all duration-300 ease-in-out'
  >
    <a
      href='/'
      class='block group py-2 px-3 rounded transition-colors duration-200 hover:bg-sky-600 text-gray-800 group-hover:text-white'
      >Home</a
    >
    <a
      href='/about'
      class='block group py-2 px-3 rounded transition-colors duration-200 hover:bg-sky-600 text-gray-800 group-hover:text-white'
      >About</a
    >
    <a
      href='/services'
      class='block group py-2 px-3 rounded transition-colors duration-200 hover:bg-sky-600 text-gray-800 group-hover:text-white'
      >Services</a
    >
    <a
      href='/contact'
      class='block group py-2 px-3 rounded transition-colors duration-200 hover:bg-sky-600 text-gray-800 group-hover:text-white'
      >Contact</a
    >
  </div>

  <script>
    ;(function () {
      const btn = document.getElementById('nav-toggle')
      const menu = document.getElementById('mobile-menu')
      const iconOpen = document.getElementById('icon-open')
      const iconClose = document.getElementById('icon-close')
      if (!btn) return
      btn.addEventListener('click', function () {
        const expanded = btn.getAttribute('aria-expanded') === 'true'
        btn.setAttribute('aria-expanded', String(!expanded))
        if (menu) {
          menu.classList.toggle('max-h-0')
          menu.classList.toggle('max-h-60')
          menu.classList.toggle('pt-2')
          menu.classList.toggle('pb-3')
        }
        if (iconOpen && iconClose) {
          iconOpen.classList.toggle('hidden')
          iconClose.classList.toggle('hidden')
        }
      })
    })()
  </script>
</nav>

<style>
  .glass {
    background: rgba(0, 0, 0, 0);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
  }
</style>
